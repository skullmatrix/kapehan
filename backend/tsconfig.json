{
    "compilerOptions": {
      /* Language and Environment */
      "target": "es2016", // Set the JavaScript language version for emitted JavaScript
      "experimentalDecorators": true, // Enable experimental support for decorators
      "emitDecoratorMetadata": true, // Emit design-type metadata for decorated declarations
  
      /* Modules */
      "module": "commonjs", // Specify module code generation: 'commonjs', 'es2015', etc.
  
      /* Interop Constraints */
      "esModuleInterop": true, // Enable compatibility with ES modules
      "forceConsistentCasingInFileNames": true, // Ensure consistent casing in file names
  
      /* Type Checking */
      "strict": true, // Enable all strict type-checking options
      "strictPropertyInitialization": false, // Disable strict property initialization (useful for TypeORM entities)
  
      /* Completeness */
      "skipLibCheck": true, // Skip type checking of declaration files
  
      /* Additional Options */
      "outDir": "./dist", // Redirect output structure to the directory
      "rootDir": "./src", // Specify the root directory of input files
      "moduleResolution": "node", // Use Node.js style module resolution
      "resolveJsonModule": true, // Include support for importing JSON modules
      "sourceMap": true // Generate corresponding .map files for debugging
    },
    "include": ["src/**/*"], // Include all files in the src directory
    "exclude": ["node_modules", "dist"] // Exclude node_modules and dist directories
  }